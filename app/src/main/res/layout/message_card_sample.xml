<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="end">

    <android.support.v7.widget.CardView
        android:id="@+id/diagnostic_message_card_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius
            ="@dimen/diagnostic_chat_message_sample_card_corner_radius"
        app:cardElevation
            ="@dimen/diagnostic_chat_message_sample_card_elevation"
        >

        <TextView
            android:id
                ="@+id/diagnostic_message_card_sample_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ghfghfg"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize
                ="@dimen/diagnostic_chat_message_sample_text_size"
            android:layout_gravity="end"
            android:padding
                ="@dimen/diagnostic_chat_message_sample_text_padding"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>
