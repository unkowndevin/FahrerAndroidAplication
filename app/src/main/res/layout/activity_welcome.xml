<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.ipn.finalproject.WelcomeActivity"
    tools:showIn="@layout/activity_welcome">

    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_slider_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/welcome_slider_dots_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/welcome_slider_dots_weight"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/welcome_slider_dots_bottom_margin"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/welcome_slider_button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="nextButtonAction"
        android:background="@null"
        android:text="@string/welcome_slider_next_button"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/welcome_slider_button_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="launchLogInActivity"
        android:background="@null"
        android:text="@string/welcome_slider_skip_button"
        android:textColor="@android:color/white" />

</RelativeLayout>
