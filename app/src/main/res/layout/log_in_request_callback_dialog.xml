<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/log_in_request_callback_dialog_title_container"
        android:layout_width="@dimen/log_in_request_callback_dialog_width"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/log_in_request_callback_dialog_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/log_in_request_callback_dialog_title_text_size"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/signUpRequestCallbackDialogTitleTextColor"
            />

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/log_in_request_callback_dialog_body_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/log_in_request_callback_dialog_body_text_size"
        android:padding="15dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/log_in_request_callback_dialog_button_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textAlignment="viewEnd"
        android:theme="@style/AppTheme.DarkRipple"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/log_in_request_callback_dialog_buttons_text_size"
        android:textColor="@color/signUpRequestCallbackDialogButtonTextColor"
        android:text="@string/log_in_dialog_callback_done_button"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:theme="@style/AppTheme.DarkRipple"/>

</LinearLayout>
